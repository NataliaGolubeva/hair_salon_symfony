{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Victoria</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav" style="margin-left: auto">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Home</a>
                </li>
                <li class="nav-item">
                    {% if app.user %}
                         <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>

                    {% endif %}
                    {% if not app.user %}
                        <a class="nav-link" href="{{ path('app_login') }}">Login</a>

                    {% endif %}
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                </li>

            </ul>
        </div>
    </nav>
<div class="example-wrapper">
    {% if app.user %}
        <h1>Hello {{ app.user.name }}! âœ…</h1>

        <div class="mb-3">
            You are logged in as {{ app.user.username }}
        </div>

    {% endif %}
<h1 class="text-center mb-2">Victoria</h1>
    <h3 class="text-center">Beauty of your hair</h3>

</div>
{% endblock %}

